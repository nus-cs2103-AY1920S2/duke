<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<fx:root minHeight="125" prefWidth="550.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true">
            <style>
                -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);
            </style>
        </ImageView>
        <VBox>
            <Label fx:id="name" wrapText="true">
                <style>
<!--                    font styling not working-->
<!--                    -fx-font-size: 18pt;-->
<!--                    -fx-font-weight: bold;-->
<!--                    -fx-font-style: italic;-->
<!--                    -fx-stroke: red;-->
                    -fx-padding: 0 0 5.0 0;
                </style>
            </Label>
            <Label fx:id="dialog" text="Label" wrapText="true"/>
            <style>
                -fx-padding: 15.0;
            </style>
        </VBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="10.0" right="10.0" top="15.0"/>
    </padding>
</fx:root>